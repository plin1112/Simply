RM = rm -f
CC = mpicc
CFLAGS = -std=c99 -Wall -O3 -fomit-frame-pointer -ffast-math -msse3 -march=native
LDFLAGS = -lm

simply: simply.c simply.o dSFMT.o genpolymer.h simply.h Makefile
	$(CC) $(CFLAGS) -o simply simply.o dSFMT.o $(LDFLAGS)

clean:
	$(RM) *.o simply *.csv

dSFMT.o: dSFMT.c dSFMT.h dSFMT-common.h dSFMT-params.h dSFMT-params19937.h
	$(CC) $(CFLAGS) -c -o dSFMT.o dSFMT.c

